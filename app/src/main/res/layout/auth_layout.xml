<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/fon"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/auth"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id = "@+id/login_text"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:height="30dp"
                android:background="@drawable/fon_for_auth" />

            <EditText
                android:id = "@+id/pass_text"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:height="30dp"
                android:background="@drawable/fon_for_auth" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ещё нет аккаунта?"
                    android:layout_gravity="start"
                    android:gravity="start"/>
                <FrameLayout
                    android:id="@+id/signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/regNowBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Зарегистрируйтесь"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:gravity="end"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/loginSms"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Войти по SMS"/>



            </FrameLayout>


            <TextView
                android:id="@+id/forgPass"
                android:layout_marginTop="8dp"
                android:layout_marginRight="50dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Забыли пароль?"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_log"
                android:layout_marginTop="8dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/login"
                android:background="@drawable/fon_for_corners_btn"/>
        </LinearLayout>


    </FrameLayout>

</LinearLayout>